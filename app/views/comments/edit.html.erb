<% provide(:title, "Approve") %>

<h2>Approve Comment</h2>

<p><%= @comment.comment %></p>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@comment) do |f| %>


      <%= f.label :approved_by, class: "checkbox inline" do %>
        <%= f.check_box :approved_by %>
<span>Approve the Comment.</span>
      <% end %>


      <%= f.submit "Approve", class: "btn btn-primary" %>
    <% end %>

  </div>
</div>
