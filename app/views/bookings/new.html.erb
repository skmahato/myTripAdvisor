<% provide(:title, "Booking") %>

<h1>Booking Area</h1>
<div class="container">
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h2><%= @hotel.hotel_name %></h2>
    <%=form_for(@booking) do |f|%>
    <%=f.hidden_field :hotel_id%>
     <%=f.date_field :check_in, class: 'form-control datepicker-in', placeholder: 'Check-in Date: MM/DD/YYYY'%>

    <%=f.date_field :check_out, class: 'form-control datepicker-out', placeholder: 'Check-out Date: MM/DD/YYYY'%>
    <%=f.submit("Book", class: "btn btn-primary")%>
  </div>
</div>
</div>
<%end%>
