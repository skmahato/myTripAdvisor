<% provide(:title, "Gallery") %>

<div class="center">
  <%=link_to('Back', hotel_path(@hotel), class: "btn btn-primary")%>
</div>


<h2>Images of</h2>
<h1><%=@hotel.hotel_name%> , <%= @hotel.location %></h1>

<%@images.each do |img| %>
<div class="media">
  <div class="media-left">
    <%= link_to image_tag(img.image.url(:large), class: 'media-object'), img.image.url, target: '_blank' %>
  </div>

</div>
<% end %>
