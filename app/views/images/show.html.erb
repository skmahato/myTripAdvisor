<% provide(:title, "Gallery") %>

<div class="center">
  <%=link_to('Back', hotel_path(@hotel), class: "btn btn-primary")%>
</div>


<h2>Images of</h2>
<h1><%=@hotel.hotel_name%> , <%= @hotel.location %></h1>

<%@images.each do |img| %>
<hr>
    <div class="row">


      <div class="col-sm-6">
        <%= link_to image_tag(img.image.url(:large), class: 'media-object'), img.image.url, target: '_blank' %>
      </div>

<% if logged_in? %>
<% if current_user.admin? %>
<div class="col-sm-6">
  <%=link_to('delete', delete_image_path(img), class: "btn btn-primary")%>
  </div>
<% end %>

<% end %>


</div>

<% end %>
